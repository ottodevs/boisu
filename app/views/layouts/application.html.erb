<!DOCTYPE html>
<html>
  <head>
    <title>Boisu</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=0">
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="nav-drawer">
        <ul class="list-unstyled main-menu">
          <!-- Navigation drawer -->
          <li class="text-right"><a href="#" id="nav-close">X</a></li>
          <li><a href="#">Menu One <span class="icon"></span></a></li>
          <li><a href="#">Menu Two <span class="icon"></span></a></li>
          <li><a href="#">Menu Three <span class="icon"></span></a></li>
          <li><a href="#">Dropdown</a>
            <ul class="list-unstyled">
              <li class="sub-nav"><a href="#">Sub Menu One <span class="icon"></span></a></li>
              <li class="sub-nav"><a href="#">Sub Menu Two <span class="icon"></span></a></li>
              <li class="sub-nav"><a href="#">Sub Menu Three <span class="icon"></span></a></li>
              <li class="sub-nav"><a href="#">Sub Menu Four <span class="icon"></span></a></li>
              <li class="sub-nav"><a href="#">Sub Menu Five <span class="icon"></span></a></li>
            </ul>
          </li>
          <li><a href="#">Menu Four <span class="icon"></span></a></li>
          <li><a href="#">Menu Five <span class="icon"></span></a></li>
        </ul>
      </nav>

      <!-- Our main navigation bar -->
      <nav class="navbar navbar-fixed-top navbar-inverse" role="navigation">
        <div class="container-fluid">

          <!-- The burger menu -->
          <div class="pull-left">
            <a id="nav-expander" class="nav-expander fixed">
              <!-- <i class="fa fa-bars fa-lg white"></i> -->
              <div class="wrapper">
                <svg class="burger" width="30px" height="30px">
                  <line class="top" type="burger" x1="0" y1="1" x2="30" y2="1" />
                  <line class="middle" type="burger" x1="0" y1="12" x2="30" y2="12" />
                  <line class="bottom" type="burger" x1="0" y1="23" x2="30" y2="23" />
                </svg>
              </div>
            </a>
          </div>

          <!-- The branded logo -->
          <div class="navbar-header">
            <div class="navbar-brand">
              <%= link_to "Boisu", root_path %>!
            </div>
          </div>

          <!-- The right side links -->
          <!-- <div class="navbar-header pull-right"> -->
            <ul class="nav navbar-nav navbar-right">
              <% if user_signed_in? %>
                <li>
                  <%= link_to '#' do %>
                    <i class="fa fa-user-circle-o fa-lg white"></i>
                    <%= current_user.email %>
                  <% end %>
                </li>
                <li>
                  <%= link_to destroy_user_session_path, method: :delete do %>
                    <i class="fa fa-sign-out fa-lg white"></i>
                    Sign out
                  <% end %>
                </li>
              <% else %>
                <li>
                  <%= link_to new_user_session_path do %>
                    <i class="fa fa-sign-in fa-lg white"></i>
                    Sign in
                  <% end %>
                </li>
<!--                 <li><%= link_to 'Sign up', new_user_registration_path %></li> -->
              <% end %>
            </ul>
          <!--</div> -->

        </div>
      </nav>
    </header>

          <!--<div id="nabvar-collapse" class="navbar">
            <ul class="nav navbar-nav navbar-right">

            </ul>
          </div>
        </div>
      </nav> -->

    <div id="main_content" class="container">
      <!-- classes for devise messages -->
      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>

      <div id="content" class="col-md-9 center-block">
        <%= yield %>
      </div>
    </div>

    <!-- Modal -->
<div id="myModal" class="modal fade" role="dialog">
  <%= render 'voice_messages/new' %>
</div>

    <footer class="footer navbar-fixed-bottom navbar-inverse">
      <div class="container">
        <canvas class="visualizer" hidden></canvas>
        <!-- <button class="record btn btn-circle btn-danger btn-xl">
        </button> -->
        <div class="record button">
          <div class="btn-danger inner">
            <div class="mic">
              <i class="fa fa-microphone fa-lg"></i>
            </div>
          </div>
        </div>
      </div>
    </footer>

    <!-- js stuff -->
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </body>
</html>
