<p id="notice"><%= notice %></p>

<h1>Voice Messages</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @voice_messages.each do |voice_message| %>
      <tr>
        <td><%= voice_message.title %></td>
        <td><%= voice_message.content %></td>
        <td><%= link_to 'Show', voice_message %></td>
        <td><%= link_to 'Edit', edit_voice_message_path(voice_message) %></td>
        <td><%= link_to 'Destroy', voice_message, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Voice Message', new_voice_message_path %>
